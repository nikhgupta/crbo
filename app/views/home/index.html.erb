          </form>
          <!-- Form End -->
        </div>
      </div>
    </div>
  </div>
  <!-- Welcome thumb -->
  <div class="welcome-thumb wow fadeInDown" data-wow-delay="0.5s">
    <%=image_tag("bg-img/welcome-img.png", alt: "")%>

  </div>
</section>
